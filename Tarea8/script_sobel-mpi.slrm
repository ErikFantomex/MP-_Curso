#!/bin/bash
# PBS Job Script para uso de mpi
#Modifique segun el numero de procesadores necesitados
#PBS -l nodes=1:ppn=4
#PBS -l walltime=00:10:00
#PBS -N MPI
#PBS -V
#PBS -q general
#PBS -k eo
module load intel/oneAPI-2021
mpicc sobel_mpi.c -o sobel_mpi  -lm -std=c99

for t in $(seq 1 2)
do
  echo "  ------------------------ Esperando $t segundos ------------"
  mpirun -np 4 ./sobel_mpi chessboard.pgm test_sobel_mpi.pgm $t
done
